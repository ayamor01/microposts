<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
        <b>Email:</b> <%= @user.email %>
      </p>
      <p>
        <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
        <b>Area:</b> <%= @user[:area] %>
      </p>
      <p>
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <b>Profile:</b> <%= @user[:profile] %>
      </p>
      <p>
        <span>
          <%= link_to pluralize(@user.following_users.count, "following"), followings_user_path %>
          <%= pluralize(@user.follower_users.count, "follower") %>
        </span>
      </p>
    </section>
  </aside>
  <div class="col-md-8">
    <h1>Followers</h1>
    <% @followers.each do |follower| %>
     <li id=follower-<%= follower.id %>>
      <%= link_to gravatar_for(follower, size: 50), follower %>
      <span class="user"><h3><%= link_to follower.name, follower %></h3></span>
      <span class="profile"><%= follower.profile %></span>
     </li>
    <% end %>
  </div>
</div>